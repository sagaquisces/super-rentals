<li class="list-group-item">
  {{#link-to 'rental' rental.id}}{{rental.owner}}'s {{rental.type}} in {{rental.city}} {{/link-to}}
  {{#if isImageShowing}}
    <p><img class="img-thumbnail" src={{rental.image}} alt={{rental.type}} {{action 'imageHide'}} width="400px"></p>
  {{else}}
    <button class="button btn-success pull-right"{{action 'imageShow'}}>Image</button>
  {{/if}}
</li>
